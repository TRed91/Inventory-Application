<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Categories</h1>
    <hr>
    <%- include('partials/nav.ejs') %>
    <hr>
    <form action="/categories" method="post">
        <input type="text" name="addCategory" id="addCategory" required>
        <button type="submit">Add Category</button>
    </form>
    <hr>
    <ul class="categories">
        <% categories.map(category => { %>
            <div>
                <li><%= category.categoryname %></li>
                <form action="/<%= category.categoryid %>/items" method="get">
                    <input type="text" hidden id="categoryItems" name="categoryItems" value="<%= category.categoryid %>">
                    <button type="submit" class="update">Items</button>
                </form>
                <form action="/categories/delete" method="post">
                    <input type="text" hidden id="deleteCategory" name="deleteCategory" value="<%= category.categoryname %>">
                    <button type="submit" class="delete">Delete</button>
                </form>
            </div>
        <% }); %>
    </ul>
</body>
</html>